FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           volScalarField;
    object          k;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1e-8;

boundaryField
{
    bottom           
    {
        type            fixedValue;
        value           $internalField;
    }

    top          
    {
        type            fixedValue;
        value           $internalField;
    }

    left
    {
        type            cyclic;
    }

    right
    {
        type            cyclic;
    }

    front
    {
        type            cyclic;
    }

    back
    {
        type            cyclic;
    }

    defaultFaces    
    {
        type            empty;
    }
}


